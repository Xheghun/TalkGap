<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>
    <style name="Widget.Button.Toggle.Flash" parent="android:Widget">
        <item name="android:background">@drawable/toggle_btn_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <style name="flashToggle" parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle.Flash</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>
    <style name="galleryActionBtn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">0dp</item>
    </style>
    <style name="media_screen_btn">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="splashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
    </style>

    <style name="text_btn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>
</resources>
